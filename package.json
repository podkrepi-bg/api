{
  "name": "podkrepi-bg-api",
  "version": "0.4.5",
  "license": "MIT",
  "repository": "https://github.com/orgs/podkrepi-bg",
  "scripts": {
    "nx": "nx",
    "dev": "yarn nx serve --watch",
    "dev-all": "yarn nx run-many --target serve --watch --all --parallel",
    "start": "yarn nx serve",
    "build": "yarn nx lint api && yarn nx build",
    "build-all": "yarn nx run-many --target build --all --parallel",
    "test": "yarn prisma generate && yarn format && yarn jest",
    "test:ci": "yarn prisma generate && yarn jest --reporters=jest-junit",
    "test:changed": "yarn jest --onlyChanged",
    "stripe:listen-webhook": "stripe listen --forward-to localhost:5010/api/v1/stripe/webhook",
    "format": "nx format",
    "migrate": "yarn prisma migrate deploy",
    "generate-schema": "yarn prisma generate && yarn format",
    "seed": "yarn prisma db seed",
    "studio": "yarn prisma studio",
    "release": "./manifests/release.sh",
    "release:patch": "./manifests/release.sh patch",
    "postversion": "./manifests/postrelease.sh v$npm_package_version",
    "lint": "yarn nx lint api"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.369.0",
    "@golevelup/nestjs-stripe": "0.6.0",
    "@golevelup/nestjs-webhooks": "0.2.14",
    "@keycloak/keycloak-admin-client": "18.0.0",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/cache-manager": "^2.0.1",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/common": "^9.3.12",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.12",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/platform-express": "^9.3.12",
    "@nestjs/platform-socket.io": "^9.3.12",
    "@nestjs/schedule": "^2.2.1",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/terminus": "^9.2.2",
    "@nestjs/websockets": "^9.3.12",
    "@ntegral/nestjs-sentry": "^4.0.0",
    "@prisma/client": "5.1.1",
    "@sendgrid/client": "7.6.2",
    "@sendgrid/mail": "7.6.0",
    "@sentry/node": "^7.60.1",
    "@types/cron": "^2.0.0",
    "aws-sdk": "^2.1369.0",
    "cache-manager": "^5.2.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "exceljs": "4.3.0",
    "handlebars": "4.7.7",
    "helmet": "5.0.2",
    "joi": "17.6.0",
    "keycloak-connect": "21.0.1",
    "luxon": "^3.3.0",
    "mjml": "^4.14.1",
    "nanoid": "3.3.4",
    "nest-keycloak-connect": "^1.9.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5",
    "stripe": "11.14.0",
    "swagger-ui-express": "4.5.0",
    "tslib": "2.4.0",
    "xml2js": "^0.5.0"
  },
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.3.12",
    "@nrwl/cli": "^15.5.1",
    "@nrwl/eslint-plugin-nx": "^15.5.1",
    "@nrwl/jest": "^15.5.1",
    "@nrwl/linter": "^15.5.1",
    "@nrwl/nest": "^15.5.1",
    "@nrwl/node": "^15.5.1",
    "@nrwl/tao": "^15.5.1",
    "@nrwl/workspace": "^15.5.1",
    "@types/express": "4.17.13",
    "@types/faker": "5.5.9",
    "@types/jest": "29.2.3",
    "@types/luxon": "3",
    "@types/mjml": "^4.7.1",
    "@types/multer": "1.4.7",
    "@types/node": "16.9.1",
    "@types/xml2js": "^0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vegardit/prisma-generator-nestjs-dto": "^1.5.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "fishery": "2.2.2",
    "husky": "7.0.2",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.3",
    "jest-junit": "^15.0.0",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "11.1.2",
    "nx": "^15.5.1",
    "prettier": "2.6.0",
    "prisma": "5.1.1",
    "prisma-dbml-generator": "^0.10.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "prisma": {
    "seed": "ts-node db/seed/index.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "nx affected:lint --uncommitted --fix --parallel"
    ],
    "*.{ts,tsx,js,json}": [
      "nx format:write --uncommitted --exclude:manifests"
    ]
  },
  "resolutions": {
    "undici": "^5.26.2",
    "semver": "^7.5.2"
  },
  "packageManager": "yarn@3.3.0",
  "jest-junit": {
    "outputName": "test-results.xml"
  }
}
