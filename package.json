{
  "name": "podkrepi-bg-api",
  "version": "0.4.5",
  "license": "MIT",
  "repository": "https://github.com/orgs/podkrepi-bg",
  "scripts": {
    "nx": "nx",
    "dev": "yarn nx serve --watch",
    "dev-all": "yarn nx run-many --target serve --watch --all --parallel",
    "start": "yarn nx serve",
    "build": "yarn nx lint api && yarn nx build",
    "build-all": "yarn nx run-many --target build --all --parallel",
    "test": "yarn prisma generate && yarn format && yarn jest",
    "test:ci": "yarn prisma generate && yarn jest",
    "test:changed": "yarn jest --onlyChanged",
    "stripe:listen-webhook": "stripe listen --forward-to localhost:5010/api/v1/stripe/webhook",
    "format": "nx format affected",
    "migrate": "yarn prisma migrate deploy",
    "generate-schema": "yarn prisma generate && yarn format",
    "studio": "yarn prisma studio",
    "release": "./manifests/release.sh",
    "release:patch": "./manifests/release.sh patch",
    "postversion": "./manifests/postrelease.sh v$npm_package_version",
    "lint": "yarn nx lint api"
  },
  "dependencies": {
    "@golevelup/nestjs-stripe": "^0.3.4",
    "@golevelup/nestjs-webhooks": "^0.2.13",
    "@keycloak/keycloak-admin-client": "18.0.0",
    "@nestjs/axios": "^0.0.7",
    "@nestjs/cli": "8.2.5",
    "@nestjs/common": "8.4.5",
    "@nestjs/config": "2.0.0",
    "@nestjs/core": "8.4.5",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/platform-express": "8.4.5",
    "@nestjs/swagger": "5.2.1",
    "@nestjs/terminus": "8.0.6",
    "@ntegral/nestjs-sentry": "3.0.6",
    "@prisma/client": "^3.15.2",
    "@sendgrid/client": "7.6.2",
    "@sendgrid/mail": "7.6.0",
    "@sentry/node": "6.19.7",
    "aws-sdk": "^2.1135.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "handlebars": "4.7.7",
    "helmet": "5.0.2",
    "joi": "17.6.0",
    "keycloak-connect": "^18.0.0",
    "mjml": "4.12.0",
    "nanoid": "^3.3.4",
    "nest-keycloak-connect": "^1.8.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5",
    "stripe": "^9.14.0",
    "supertest": "^6.2.4",
    "swagger-ui-express": "^4.4.0",
    "tslib": "2.4.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.5",
    "@nrwl/cli": "12.9.0",
    "@nrwl/eslint-plugin-nx": "13.9.3",
    "@nrwl/jest": "13.9.3",
    "@nrwl/linter": "13.9.3",
    "@nrwl/nest": "13.9.3",
    "@nrwl/node": "13.9.3",
    "@nrwl/tao": "12.9.0",
    "@nrwl/workspace": "13.9.3",
    "@types/express": "4.17.13",
    "@types/faker": "5.5.9",
    "@types/jest": "27.0.2",
    "@types/mjml": "4.7.0",
    "@types/multer": "1.4.7",
    "@types/node": "16.9.1",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "@vegardit/prisma-generator-nestjs-dto": "1.4.0",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "faker": "5.5.3",
    "husky": "7.0.2",
    "jest": "27.2.3",
    "jest-extended": "1.2.0",
    "jest-mock-extended": "2.0.4",
    "lint-staged": "11.1.2",
    "nx": "13.9.3",
    "prettier": "2.6.0",
    "prisma": "^3.15.2",
    "prisma-dbml-generator": "0.9.0",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  },
  "prisma": {
    "seed": "ts-node db/seed/index.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "nx affected:lint --uncommitted --fix --parallel"
    ],
    "*.{ts,tsx,js,json}": [
      "nx format:write --uncommitted --exclude:manifests"
    ]
  },
  "resolutions": {
    "set-value": "^4.0.1",
    "glob-parent": "^5.1.2"
  }
}
