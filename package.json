{
  "name": "podkrepi-bg-api",
  "version": "0.3.5",
  "license": "MIT",
  "repository": "https://github.com/orgs/podkrepi-bg",
  "scripts": {
    "nx": "nx",
    "dev": "yarn nx serve --watch",
    "dev-all": "yarn nx run-many --target serve --watch --all --parallel",
    "start": "yarn nx serve",
    "build": "yarn nx build",
    "build-all": "yarn nx run-many --target build --all --parallel",
    "test": "yarn nx run-many --target test --all",
    "test:changed": "yarn nx test --watch --onlyChanged",
    "stripe:listen-webhook": "stripe listen --forward-to localhost:5010/api/stripe/webhook",
    "format": "nx format affected",
    "migrate": "yarn prisma migrate deploy",
    "generate-schema": "yarn prisma generate && yarn format",
    "studio": "yarn prisma studio",
    "release": "./manifests/release.sh",
    "release:patch": "./manifests/release.sh patch",
    "postversion": "./manifests/postrelease.sh v$npm_package_version"
  },
  "dependencies": {
    "@golevelup/nestjs-stripe": "0.2.2",
    "@golevelup/nestjs-webhooks": "0.2.11",
    "@keycloak/keycloak-admin-client": "15.0.2",
    "@nestjs/cli": "8.2.3",
    "@nestjs/common": "8.2.5",
    "@nestjs/config": "1.1.6",
    "@nestjs/core": "8.2.5",
    "@nestjs/platform-express": "8.2.5",
    "@nestjs/swagger": "5.1.5",
    "@nestjs/terminus": "8.0.4",
    "@ntegral/nestjs-sentry": "3.0.6",
    "@prisma/client": "^3.11.0",
    "@sendgrid/mail": "7.6.0",
    "@sentry/node": "6.14.1",
    "@types/aws-sdk": "^2.7.0",
    "aws-sdk": "^2.1086.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "handlebars": "4.7.7",
    "helmet": "4.6.0",
    "joi": "17.4.2",
    "keycloak-connect": "15.0.2",
    "mjml": "4.10.4",
    "nest-keycloak-connect": "1.7.6",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.4.0",
    "stripe": "8.186.1",
    "swagger-ui-express": "4.3.0",
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.5",
    "@nrwl/cli": "12.9.0",
    "@nrwl/eslint-plugin-nx": "13.9.3",
    "@nrwl/jest": "13.9.3",
    "@nrwl/linter": "13.9.3",
    "@nrwl/nest": "13.9.3",
    "@nrwl/node": "13.9.3",
    "@nrwl/tao": "12.9.0",
    "@nrwl/workspace": "13.9.3",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jest": "27.0.2",
    "@types/mjml": "^4.7.0",
    "@types/multer": "^1.4.7",
    "@types/node": "16.9.1",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "@vegardit/prisma-generator-nestjs-dto": "^1.4.0",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "faker": "^5.5.3",
    "husky": "7.0.2",
    "jest": "27.2.3",
    "jest-extended": "^1.2.0",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "11.1.2",
    "nx": "13.9.3",
    "prettier": "2.6.0",
    "prisma": "^3.11.0",
    "prisma-dbml-generator": "^0.8.0",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  },
  "prisma": {
    "seed": "ts-node db/seed/index.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "nx affected:lint --uncommitted --fix --parallel"
    ],
    "*.{ts,tsx,js,json}": [
      "nx format:write --uncommitted --exclude:manifests"
    ]
  },
  "resolutions": {
    "set-value": "^4.0.1",
    "glob-parent": "^5.1.2"
  }
}
