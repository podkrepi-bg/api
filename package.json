{
  "name": "podkrepi-bg-api",
  "version": "0.0.1",
  "license": "MIT",
  "repository": "https://github.com/orgs/podkrepi-bg",
  "scripts": {
    "nx": "nx",
    "dev": "yarn nx run-many --target serve --watch --all --parallel",
    "start": "yarn nx serve",
    "build": "yarn nx build",
    "build-all": "yarn nx run-many --target build --all --parallel",
    "test": "yarn nx run-many --target test --all",
    "format": "nx format affected",
    "migrate": "yarn prisma migrate deploy",
    "generate-schema": "yarn prisma generate",
    "studio": "yarn prisma studio"
  },
  "dependencies": {
    "@nestjs/cli": "8.1.1",
    "@nestjs/common": "8.0.6",
    "@nestjs/config": "1.0.1",
    "@nestjs/core": "8.0.6",
    "@nestjs/platform-express": "8.0.6",
    "@nestjs/swagger": "5.0.9",
    "@ntegral/nestjs-sentry": "3.0.6",
    "@prisma/client": "3.0.2",
    "@sentry/node": "6.13.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "joi": "17.4.2",
    "keycloak-connect": "15.0.2",
    "nest-keycloak-connect": "1.7.5",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.3.0",
    "swagger-ui-express": "4.1.6",
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "8.0.3",
    "@nestjs/testing": "8.0.6",
    "@nrwl/cli": "12.9.0",
    "@nrwl/eslint-plugin-nx": "12.9.0",
    "@nrwl/jest": "12.9.0",
    "@nrwl/linter": "12.9.0",
    "@nrwl/nest": "12.9.0",
    "@nrwl/node": "12.9.0",
    "@nrwl/tao": "12.9.0",
    "@nrwl/workspace": "12.9.0",
    "@types/jest": "27.0.1",
    "@types/node": "16.9.1",
    "@typescript-eslint/eslint-plugin": "~4.31.2",
    "@typescript-eslint/parser": "~4.31.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "jest": "27.2.1",
    "jest-extended": "0.11.5",
    "jest-mock-extended": "2.0.2-beta2",
    "lint-staged": "11.1.2",
    "nx": "12.9.0",
    "prettier": "2.4.1",
    "prisma": "3.0.2",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  },
  "prisma": {
    "seed": "ts-node db/seed/index.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "nx affected:lint --uncommitted --fix --parallel"
    ],
    "*.{ts,tsx,js,json}": [
      "nx format:write --uncommitted"
    ]
  }
}
