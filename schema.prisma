}

enum CampaignState {
  initial
  draft
  pending_validation
  approved
  rejected
  active
  active_pending_validation
  suspended
  complete
  disabled
  error
  deleted

  @@map("campaign_state")
}

enum Currency {
  BGN
  EUR
  USD

  @@map("currency")
}

enum ExpenseType {
